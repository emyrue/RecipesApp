<div>
<h1>Food</h1>

<div>
<%= link_to "Add Food", new_food_path, class: "food-btn" %>
</div>

<hr />

<div>
<table>
<thead>
<tr>
<th>Name</th>
<th>Measurement Unit</th>
<th>Unit Price</th>
<th>Action</th>
</tr>
</thead>
<tbody>
<% @foods.each do |f|%>
<tr>
<td><%= f.name %></td>
<td><%= f.measurement_unit %></td>
<td><%= f.price %></td>

<td>
  <% if can? :destroy, @foods %>
    <%= button_to "Delete", food_path(f), method: :delete %>
  <% end %>
</td>
</tr>
<% end %>
</tbody>
</table>
</div>

</div>