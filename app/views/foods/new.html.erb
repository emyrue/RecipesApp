<%= link_to "Home", root_path, class: "home-btn" %>
<h1>New Food</h1>

<hr />

<%= form_with model: @food, local: true, method: :post, scope: :food do |f| %>
            <%= f.text_field :name, placeholder: "Name", rows: "8", required: true %>
            <%= f.text_field :measurement_unit, placeholder: "Measurement Unit", rows: "8", required: true %>
            <%= f.number_field :price, step: 0.01, placeholder: "Unit Price", rows: "8", required: true %>
            <%= f.submit "Create Food", class: 'button' %>
<% end %>