<h1>Add Food to Recipe</h1>

<%= form_with model: @recipe_food, url: recipe_recipe_foods_path(params[:recipe_id]), local: true, method: :post, scope: :recipe_food do |f| %>
  <%= f.number_field :quantity, placeholder: "Quantity", rows: "8", required: true %>
    <div class="form-group">
      <%= f.select :food_id, @foods.map { |t| [t.name, t.id]}, {}, class: "form-control" %>
    </div>
  <%= f.submit "Create recipe", class: 'button' %>
<% end %>